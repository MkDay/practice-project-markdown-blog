<div class="form-group mb-2">
    <label class="form-label" for="title">Title</label>
    <input type="text" id="title" name="title" class="form-control" value="<%= article.title %>" required>
</div>

<div class="form-group mb-2">
    <label class="form-label" for="description">Description</label>
    <textarea name="description" id="decription" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mb-2">
    <label class="form-label" for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
